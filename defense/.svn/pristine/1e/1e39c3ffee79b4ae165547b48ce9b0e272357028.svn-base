	var title = "添加忽略MAC信息";
    $.ajax({
        url : "${link.contextPath}/stationTrust/mac/add.html",//这个就是请求地址对应sAjaxSource
        type : 'post',
        success : function(result) {
          	bootBoxShow(result,title);
        },
        error : function(msg) {
            alert("查询异常");
        }
    });
 }
getTableData();

</script>
