
#parse("base/bootBox.vm")
#parse("base/baseList.vm")

<style>

.css2 {
overflow: hidden; /*自动隐藏文字*/
text-overflow: ellipsis;/*文字隐藏后添加省略号*/
white-space: nowrap;/*强制不换行*/
width: 10em;/*不允许出现半汉字截断*/
}
</style>
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <h3 class="header smaller lighter blue">设备</h3>
            #foreach($demt in $demtList)
            <div class="infobox infobox-black  " >
				#if($demt.online==1)
                <DIV data-html="true"class="tooltip-info"  data-rel="tooltip" data-placement="left" title="<p align='left'>备注：$demt.remarks <br/> 设备名称：$demt.name  <br/> 序列号：$demt.deviceSerial <br/>  安装时间：$date.format('yyyy-MM-dd hh:mm:ss',$demt.installTime) <br/>  当前在线状态：在线 <br/> 当前功能：$demt.function</p>" > 
                    <DIV align="center">
						$demt.name<BR>
                        <SPAN style="float: left;"> 版本：</SPAN>$!demt.version<img src="${link.contextPath}/resources/imgs/user-online.png" width="26px" height="26px" class="infoboximg"><BR>
                        
                      <SPAN
                                style="float: left;">安装时间：</SPAN><label >$date.format('yyyy-MM-dd hh:mm:ss',$demt.installTime)</label> <br>
                                <SPAN
                                style="float: left;">备注：</SPAN><label class="css2">$!demt.remarks</label><I class="icon-edit bigger-140" style="cursor:pointer;" onclick="editRemark('$demt.deviceSerial')"></I>
                       </DIV> 
                </DIV>

					#else
					<div class="tooltip-info" data-placement="left" data-html="true" data-rel="tooltip" title="<p align='left'>备注：$demt.remarks <br/> 设备名称：$demt.name  <br/> 序列号：$demt.deviceSerial <br/>  当前在线状态：离线 <br/> 当前功能：$demt.function<br> 安装时间：$date.format('yyyy-MM-dd hh:mm:ss',$demt.installTime) <br/> 离线时间：$date.format('yyyy-MM-dd hh:mm:ss',$demt.lastTime) </p>" >
		            	<div align="center">
							$demt.name<BR>
                            <SPAN style="float: left;"> 版本：</SPAN>$!demt.version<img src="${link.contextPath}/resources/imgs/offline-user.png" width="26px" height="26px" class="infoboximg"><BR>
                            
                   <!--          <SPAN
                                    style="float: left;">修改备注</SPAN><I class="icon-edit bigger-140" style="cursor:pointer;" onclick="editRemark('$demt.deviceSerial')"></I><br>  -->
                                    <SPAN
                                style="float: left;">安装时间：</SPAN><label >$date.format('yyyy-MM-dd hh:mm:ss',$demt.installTime)</label><br>
                                     <SPAN
                                style="float: left;">离线时间：</SPAN><label >$date.format('yyyy-MM-dd hh:mm:ss',$demt.lastTime)</label><br>
                                <SPAN
                                style="float: left;">备注：</SPAN><label class="css2">$!demt.remarks</label><I class="icon-edit bigger-140" style="cursor:pointer;" onclick="editRemark('$demt.deviceSerial')"></I> 
                                 </DIV>
					</div>
					#end
				</div>
			#end
        </div>
    </div>
</div>




<script type="text/javascript">
function editRemark(deviceSerial) {
	$.ajax({
        url: "${link.contextPath}/demt/edit.html",//这个就是请求地址对应sAjaxSource
        data: {deviceSerial:deviceSerial},//这个是把datatable的一些基本数据传给后台,比如起始位置,每页显示的行数
        type: 'post',
        success: function (result) {
        	bootBoxShow(result,"修改备注");
        },
        error: function (msg) {
            alert("修改异常");
        }
    })
}
$('[data-rel=tooltip]').tooltip();
$('[data-rel=popover]').popover({html:true});
</script>